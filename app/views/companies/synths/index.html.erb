<h1><%= @company.name %></h1>
<% @synths.each do |synth| %>
<h3><%= synth.name %></h3>
<p>Polyphony: <%= synth.polyphony %></p>
<p>Number of Voices: <%= synth.number_of_voices %></p>
<p>Production Years: <%= synth.production_years %></p>
<p>Synth ID: <%= synth.id %></p>
<p>Company ID: <%= synth.company_id %></p>
<% end %>
<%= link_to "Add Synth", "/companies/#{@company.id}/synths/new" %>
<%= form_with url: "/companies/#{@company.id}/synths", method: :get, local: true do |form|%>
  <%= form.label :number_of_voices, "Number of Voices" %>
  <%= form.number_field :number_of_voices %>
  <%= form.submit "Return Synths with voice count more than this" %>
<% end %>